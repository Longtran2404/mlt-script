{
  "mcpServers": {
    "google-drive": {
      "command": "npx",
      "args": ["mcp-google-drive@latest"],
      "env": {
        "GOOGLE_SERVICE_ACCOUNT_KEY": "${GOOGLE_SERVICE_ACCOUNT_KEY}"
      }
    },
    "google-sheets": {
      "command": "npx", 
      "args": ["mcp-google-sheets-server@latest"],
      "env": {
        "GOOGLE_SERVICE_ACCOUNT_KEY": "${GOOGLE_SERVICE_ACCOUNT_KEY}"
      }
    },
    "animejs": {
      "command": "node",
      "args": ["dist/index.js"],
      "cwd": "mcp-animejs"
    }
  }
}